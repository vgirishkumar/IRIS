<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence     http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

	<!-- Generated JPA configuration for IRIS MockResponder -->
	<persistence-unit name="ResponderServiceHibernate" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
#foreach ( $resourceInfo in $resourcesInfo )
#if (!$resourceInfo.getEntityInfo().isFeedEntity() && $resourceInfo.getEntityInfo().isJpaEntity()) 
		<class>$resourceInfo.getEntityInfo().getFQTypeName()</class>
#end
#end
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:responder;shutdown=true;ifexists=false" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.validator.apply_to_ddl" value="false"/> 
			<property name="hibernate.validator.autoregister_listeners" value="false"/>
		</properties>
	</persistence-unit>

</persistence>
