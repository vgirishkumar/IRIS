rim FlightResponder {

	event DELETE {
		method: DELETE
	}
	event GET {
		method: GET
	}
	event POST {
		method: POST
	}
	event PUT {
		method: PUT
	}

	command CreateEntity
	command DeleteEntity
	command GETEntities
	command GETEntity
	command GETException
	command GETNavProperty
	command GETServiceDocument
	command NoopGET
	command UpdateEntity

initial resource ServiceDocument {
	type: item
	entity: ServiceDocument
	view { GETServiceDocument }
	path "/"
	GET -> Flights
	GET -> Airports
	GET -> FlightSchedules
	GET -> Passengers
}




resource Flights {
	type: collection
	entity: Flight
	view { GETEntities }
	path "/Flights()"
	POST -> Flights_created
	GET *-> flight id=flightID
}

resource flight {
	type: item
	entity: Flight
	view { GETEntity }
	path "/Flights({id})"
}

resource Flights_created {
	type: item
	entity: Flight
	actions { CreateEntity }
	path "/Flights()"
}

resource Airports {
	type: collection
	entity: Airport
	view { GETEntities }
	path "/Airports()"
	POST -> Airports_created
	GET *-> airport id=code
}

resource airport {
	type: item
	entity: Airport
	view { GETEntity }
	path "/Airports('{id}')"
}

resource Airports_created {
	type: item
	entity: Airport
	actions { CreateEntity }
	path "/Airports()"
}

resource FlightSchedules {
	type: collection
	entity: FlightSchedule
	view { GETEntities }
	path "/FlightSchedules()"
	POST -> FlightSchedules_created
	GET *-> flightschedule id=flightScheduleID
	GET *-> flightschedule_departureAirport id=flightScheduleID
	GET *-> flightschedule_arrivalAirport id=flightScheduleID
}

resource flightschedule {
	type: item
	entity: FlightSchedule
	view { GETEntity }
	path "/FlightSchedules({id})"
	GET -> flightschedule_departureAirport id=flightScheduleID
	GET -> flightschedule_arrivalAirport id=flightScheduleID
}

resource flightschedule_arrivalAirport {
	type: item
	entity: Airport
	view { GETNavProperty navproperty="arrivalAirport", entity=FlightSchedule }
	path "/FlightSchedules({id})/arrivalAirport"
}

resource flightschedule_departureAirport {
	type: item
	entity: Airport
	view { GETNavProperty navproperty="departureAirport", entity=FlightSchedule }
	path "/FlightSchedules({id})/departureAirport"
}

resource FlightSchedules_created {
	type: item
	entity: FlightSchedule
	actions { CreateEntity }
	path "/FlightSchedules()"
}

resource Passengers {
	type: collection
	entity: Passenger
	view { GETEntities }
	path "/Passengers()"
	POST -> Passengers_created
	GET *-> passenger id=passengerNo
}

resource passenger {
	type: item
	entity: Passenger
	view { GETEntity }
	path "/Passengers({id})"
}

resource Passengers_created {
	type: item
	entity: Passenger
	actions { CreateEntity }
	path "/Passengers()"
}
}
